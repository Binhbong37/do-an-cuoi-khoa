<%- include('../includes/head.ejs') %>
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="container">
                <!-- center -->
                <div class="mt-3">
                    <h2 style="text-align: center;">Sửa user</h2>
                    <div class="user-message user-message--error">Error</div>
                     <form action="/admin/edit-user" method="post">
                        <div class="form-group">
                          <label for="name">Họ tên</label>
                          <input type="text" class="form-control" name = 'name' id="name" value="<%= user.name %>">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                              <label for="password">Mật khẩu</label>
                              <input disabled type="password" class="form-control" name="password" id="password" value="123abc">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="email">Email</label>
                                <input type="text" class="form-control" name="email" id="email" value="<%= user.email %>">
                            </div>
                        </div>
                        <div class="form-group">
                          <label for="address">Địa chỉ</label>
                          <input type="text" class="form-control" name="address" id="address" value="<%= user.address %>" >
                        </div>
                        <div class="form-row align-items-center">
                          <div class="col-auto my-1">
                            <label class="mr-sm-2" for="gender">Giới tính</label>
                            <select class="custom-select mr-sm-2" name="gender" id="gender">
                              <option value="1">Nữ</option>
                              <option value="0" <%= user.gender == 0 ? 'selected' : ''%>> Nam</option>
                            </select>
                          </div>
                          <div class="col-auto my-1">
                            <label class="mr-sm-2" for="position">Quyền sử dụng</label>
                            <select class="custom-select mr-sm-2" name="position" id="position">
                              <option selected value="user">User</option>
                              <option value="admin">Admin</option>
                            </select>
                          </div>
                        </div>
                        <div style="text-align: center;">
                          <input type="hidden" name="editUserId" value="<%= user._id %>" />
                          <button type="submit" class="btn btn-primary mr-3">Ok</button>
                          <button type="button" class="btn btn-link" id="reset">Reset</button>

                        </div>
                    </form>
                </div>
        </div> 
    </main>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        $ (document).ready(function() {
          $("#reset").click(function() {
            // name
            $("#name").val('');
            $("#email").val('');
            $("#password").val('');
            $("#password1").val('');
            $("#address").val('');
            $("#gender").val('0');
            $("#position").val('user');
            
          })
        })
      })
    </script>
<%- include('../includes/end.ejs') %>