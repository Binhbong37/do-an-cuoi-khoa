<%- include('../includes/head.ejs') %>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="container">
            <div class="row p-3">
                <h3 class="col-6">Danh sách User</h3>
                <form class="form-inline my-2 my-lg-0 col-6">
                    <input
                        class="form-control mr-sm-2"
                        type="Tìm kiếm"
                        placeholder="Search"
                        aria-label="Search"
                    />
                    <button
                        class="btn btn-outline-success my-2 my-sm-0"
                        type="button"
                    >
                        Tìm
                    </button>
                </form>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Họ tên</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let us of user) { %>
                    <tr>
                        <th scope="row"><%= us.id %></th>
                        <td><%= us.name %></td>
                        <td>Otto</td>
                        <td>@mdo</td>
                        <td>
                            <a
                                href="/admin/edit/user"
                                type="button"
                                class="btn btn-warning"
                                id="edit"
                            >
                                Sửa
                            </a>
                            <a
                                href=""
                                class="btn btn-danger"
                                data-toggle="modal"
                                data-target="#delete-user-modal"
                                data-id="<%= us.id %>"
                            >
                                Xóa
                            </a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <!-- form modal -->
        <div id="delete-user-modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Xóa người dùng</h5>
                        <button
                            type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-label="Close"
                        >
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Bạn chắc chắn muốn xóa người dùng này ?</p>
                    </div>
                    <div class="modal-footer">
                        <button
                            id="btn-delete-user"
                            type="button"
                            class="btn btn-danger"
                        >
                            Xóa bỏ
                        </button>
                        <button
                            type="button"
                            class="btn btn-secondary"
                            data-dismiss="modal"
                        >
                            Hủy
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        $(document).ready(function () {
            let userId;
            $('#delete-user-modal').on('show.bs.modal', function (e) {
                let button = $(e.relatedTarget);
                userId = button.data('id');
                console.log(userId);
            });
        });
    });
</script>
<%- include('../includes/end.ejs') %>
